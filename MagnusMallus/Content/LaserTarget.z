class LaserTarget : ZilchComponent
{
    function Initialize(init : CogInitializer)
    {
        this.Owner.RigidBody.Velocity.X = this.Space.FindFirstObjectByName("Minion").Transform.Translation.X - this.Owner.Transform.Translation.X;
        this.Owner.RigidBody.Velocity.Y = this.Space.FindFirstObjectByName("Minion").Transform.Translation.Y - this.Owner.Transform.Translation.Y;
    }
}
